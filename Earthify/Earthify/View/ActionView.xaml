<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Earthify.View.ActionView">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="ID" />
            <!--<Entry x:Name="employeeID" Placeholder="Enter ID No."/> -->
            <Label Text="Description" />
            <Entry x:Name="txtDescription" Placeholder="Enter Description"/>
            <Label Text="Category" />
            <Picker x:Name="txtCategory" Title="Select Category">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Low</x:String>
                        <x:String>Medium</x:String>
                        <x:String>High</x:String>
                        <!-- Add more categories here -->
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            <Label Text="Impact Level" />
            <Entry x:Name="txtImpactlvl" Placeholder="Enter Impact Level"/>
            <Label Text="Impact Description" />
            <Entry x:Name="txtImpactdesc" Placeholder="Enter Impact Description"/>
            <Label Text="Frequency" />
            <Entry x:Name="txtFrequency" Placeholder="Enter Frequency"/>
            <Button Text="Save Record" Clicked="btnSaveUpdate_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>